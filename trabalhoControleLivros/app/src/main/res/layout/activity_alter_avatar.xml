<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.alteration.AlterAvatarActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:paddingHorizontal="40sp"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnAndroidAv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_android_avatar"
                android:paddingHorizontal="30sp"
                android:text="Android" />

            <Space
                android:padding="20sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSnowAv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_snow_avatar"
                android:paddingHorizontal="30sp"
                android:text="Neve" />

        </TableRow>

        <TableRow
            android:paddingHorizontal="40sp"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSunAv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_sun_avatar"
                android:paddingHorizontal="30sp"
                android:text="Sol" />

            <Space
                android:padding="20sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnFlowerAv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_flower_avatar"
                android:paddingHorizontal="30sp"
                android:text="Flor" />
        </TableRow>

        <TableRow
            android:paddingHorizontal="40sp"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnCarAv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_car_avatar"
                android:paddingHorizontal="30sp"
                android:text="Carro" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</android.support.constraint.ConstraintLayout>