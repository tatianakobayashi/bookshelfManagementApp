<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.form.ExemplarFormActivity">

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolbarExemplarForm"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="?attr/colorPrimary"-->
    <!--android:minHeight="?attr/actionBarSize"-->
    <!--android:theme="?attr/actionBarTheme" />-->

    <!--app:layout_constraintTop_toBottomOf="@+id/toolbarExemplarForm"-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:id="@+id/linLayExemplarForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:layout_editor_absoluteX="123dp">

            <TextView
                android:id="@+id/txtTitleExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_exemplar_form"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/linLayExemplarFormID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIdExemplarForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtIdExemplarForm"
                    android:text="@string/id"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/edtIdExemplarForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="TextView"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtBookExemplarForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/spnBookExemplarForm"
                android:text="@string/book"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spnBookExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txtStatusExemplarForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edtStatusExemplarForm"
                android:text="@string/status"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/edtStatusExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/statusHint"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/txtEditorExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/spnEditorExemplarForm"
                android:text="@string/publisher"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnEditorExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/editorHint"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEditionExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/edtEditionExemplarForm"
                android:text="@string/edition"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEditionExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/editionHint"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtPagesExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/edtPagesExemplarForm"
                android:text="@string/pages"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPagesExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/pagesHint"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtBookTypeExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/rdgBookTypeExemplarForm"
                android:text="@string/type"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdgBookTypeExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ebook"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/physicalBook"
                    android:textSize="20dp" />
            </RadioGroup>


            <TextView
                android:id="@+id/txtLanguageExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/spnLanguageExemplarForm"
                android:text="@string/language"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnLanguageExemplarForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/languageHint"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linLayExemplarFormOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTimesReadExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtTimesReadExemplarForm"
                    android:text="@string/timesRead"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTimesReadExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtTimesLentExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtTimesLentExemplarForm"
                    android:text="@string/timesLent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTimesLentExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtCoverImageExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtCoverImageExemplarForm"
                    android:text="@string/coverImage"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtCoverImageExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/coverImageHint"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtCommentsExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtCommentsExemplarForm"
                    android:text="@string/comments"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtCommentsExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/commentsHint"
                    android:inputType="textMultiLine"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtClassificationLastExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/edtClassificationLastExemplarForm"
                    android:text="@string/classificationLast"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtClassificationLastExemplarForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtClassificationMeanExemplarForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/edtClassificationMeanExemplarForm"
                        android:text="@string/classificationMean"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtClassificationMeanExemplarForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTimesClassificatedExemplarForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/edtTimesClassificatedExemplarForm"
                        android:text="@string/timesClassificated"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtTimesClassificatedExemplarForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>